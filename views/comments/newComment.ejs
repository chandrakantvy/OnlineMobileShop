<%- include('../partials/header') %>

<div class="container">
    <div>
        <h1 style="text-align: center;">Add New Comment to <%= mobile.name %></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/mobiles/<%= mobile._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-success btn-primary btn-block" style="color: white;">Submit</button>
                </div>
            </form>   
            <a href="/mobiles/<%= mobile._id %>"> Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
