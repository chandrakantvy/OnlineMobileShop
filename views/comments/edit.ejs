<%- include('../partials/header') %>

<div class="container">
    <div>
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/mobiles/<%= mobile_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-success btn-primary btn-block" style="color: white;">Submit</button>
                </div>
            </form>   
            <a href="/mobiles/<%= mobile_id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
