<%- include('../partials/header') %>

<div class="container">
    <div>
        <h1 style="text-align: center;">Edit <%= mobile.name %></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/mobiles/<%= mobile._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="mobile[name]" value="<%= mobile.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mobile[price]" value="<%= mobile.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mobile[image]" value="<%= mobile.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mobile[description]" value="<%= mobile.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-success btn-primary btn-block" style="color: white;">Submit</button>
                </div>
            </form>   
            <a href="/mobiles"> Go Back to Mobile page</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
