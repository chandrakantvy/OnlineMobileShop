<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">ONLINE MOBILE SHOP</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= mobile.image %>">
                <div class="caption-full">
                    <h4 class="float-right">Price: Rs.<%= mobile.price %></h4>
                    <h4><a href=""><%= mobile.name %></a></h4>
                    <p><%= mobile.description %></p>
                    <p>
                        <em>Submitted by <%= mobile.author.username %></em>
                    </p>
                    <% if (loggedin && (mobile.author.id).equals(loggedin._id)) {%>
                        <a class="btn btn-warning" href="/mobiles/<%= mobile._id %>/edit">Edit</a>
                        <form id="delete-form" action="/mobiles/<%= mobile._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/mobiles/<%= mobile._id %>/comments/new" class="btn btn-success" style="color: white;">Add Comment</a>
                </div>
                <hr>
                <% mobile.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%= comment.text %></p>
                            <a href="/mobiles/<%= mobile._id %>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                            <form id="delete-form" action="/mobiles/<%= mobile._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">DELETE</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
